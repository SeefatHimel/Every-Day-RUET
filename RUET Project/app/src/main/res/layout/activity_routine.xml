<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/windowback"
    tools:context=".RoutineActivity">

    <Button
        android:layout_margin="50dp"
        android:id="@+id/btnAddRoutineActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#f5f7f7"
        android:background="#6e2a2a1b"
        android:textAllCaps="false"
        android:text="Add or Edit Routine"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"/>

    <Button
        android:layout_margin="50dp"
        android:id="@+id/btnShowRoutineActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#f5f7f7"
        android:background="#6e2a2a1b"
        android:padding="10dp"
        android:text="Display Routine"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"/>



</LinearLayout>